<div class="container">
    <h1>รายชื่อนักศึกษา</h1>
  
    <!-- ฟอร์มค้นหานักเรียน -->
    <form action="/std" method="GET" class="mb-3">
      <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="ค้นหานักเรียน..." aria-label="ค้นหานักเรียน..." />
        <button class="btn btn-outline-secondary" type="submit">ค้นหา</button>
      </div>
    </form>
  

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Curriculum</th>
                    <th>Email</th>
                    <th>Attendance</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.id %></td>
                        <td><%= student.first_name %></td>
                        <td><%= student.last_name %></td>
                        <td><%= student.curriculum %></td>
                        <td><%= student.email %></td>
                        <td><input type="radio" name="status_<%= student.id %>" value="P">มา</td>
                        <td><input type="radio" name="status_<%= student.id %>" value="N">ไม่มา</td>
                        <td>
                            <!-- ปุ่มอัพเดต -->
                            <a href="/edit/<%= student.id %>" class="btn btn-primary btn-sm">อัพเดต</a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <button type="submit">บันทึก</button>
